@model LibroModel

<h2>Detalles del Libro</h2>

<dl class="row">
    <dt class="col-sm-2">Id</dt>
    <dd class="col-sm-10">@Model.Id</dd>
    <dt class="col-sm-2">Título</dt>
    <dd class="col-sm-10">@Model.Titulo</dd>
    <dt class="col-sm-2">Autor</dt>
    <dd class="col-sm-10">@Model.Autor.Nombre</dd>
    <dt class="col-sm-2">Categoría</dt>
    <dd class="col-sm-10">@Model.Categoria.Nombre</dd>
    <dt class="col-sm-2">Editorial</dt>
    <dd class="col-sm-10">@Model.Editorial.Nombre</dd>
    <dt class="col-sm-2">Ubicación</dt>
    <dd class="col-sm-10">@Model.Ubicacion</dd>
    <dt class="col-sm-2">Ejemplares</dt>
    <dd class="col-sm-10">@Model.Ejemplares</dd>
    <dt class="col-sm-2">Estado</dt>
    <dd class="col-sm-10">@Model.Estado</dd>
</dl>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</p>
