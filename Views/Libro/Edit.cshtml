@model LibroModel

<h2>Editar Libro</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Titulo" class="control-label">Título</label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AutorId" class="control-label">Autor</label>
        <select asp-for="AutorId" asp-items="@(new SelectList(ViewBag.Autores, "Id", "Nombre"))" class="form-control">
            <option value="">Seleccione un autor</option>
        </select>
        <span asp-validation-for="AutorId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="CategoriaId" class="control-label">Categoría</label>
        <select asp-for="CategoriaId" asp-items="@(new SelectList(ViewBag.Categorias, "Id", "Nombre"))" class="form-control">
            <option value="">Seleccione una categoría</option>
        </select>
        <span asp-validation-for="CategoriaId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EditorialId" class="control-label">Editorial</label>
        <select asp-for="EditorialId" asp-items="@(new SelectList(ViewBag.Editoriales, "Id", "Nombre"))" class="form-control">
            <option value="">Seleccione una editorial</option>
        </select>
        <span asp-validation-for="EditorialId" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ubicacion" class="control-label">Ubicación</label>
        <input asp-for="Ubicacion" class="form-control" />
        <span asp-validation-for="Ubicacion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ejemplares" class="control-label">Ejemplares</label>
        <input asp-for="Ejemplares" class="form-control" />
        <span asp-validation-for="Ejemplares" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Estado" class="control-label">Estado</label>
        <input asp-for="Estado" class="form-control" />
        <span asp-validation-for="Estado" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Guardar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </div>
</form>
